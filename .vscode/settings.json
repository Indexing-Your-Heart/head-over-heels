{
    "editor.renderWhitespace": "selection",
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "editor.rulers": [
            100
        ]
    },
    "[csharp]": {
        "editor.rulers": [
            120
        ]
    },
    "python.formatting.provider": "yapf",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/**.import": true,
        ".mono/": true
    }
}